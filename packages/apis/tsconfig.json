{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "target": "es2017",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2016", "es2017"],
    "module": "commonjs",
    "incremental": true,
    "outDir": "lib"
  },
  "include": ["src/**/*", "bin/**/*"]
}
